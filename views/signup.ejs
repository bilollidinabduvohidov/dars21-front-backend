          <h1 class="heading-page">register</h1>
      

          <form action="http://localhost:4001/signup" method="post" class="sign-up-form">


            <!-- <input class="login_image" type="file" name="photo" accept="image/*" > -->

            <input type="text" class="signup-input" name="name" placeholder="Enter your Name">

            <input type="email" class="signup-input" name="email" placeholder="Enter your Email">

            <input type="password" class="signup-input" name="password" placeholder="Enter your Password">
      
            <button  onclick="showMsg()" class="btn-signup">Sign Up</button>
            
           
            
          </form>
        </div>
        
        <div class="animation_register"></div>
        <div class="animation_register2"></div>
        <div class="animation_register3"></div>
        <div class="animation_register4"></div>
        <div class="animation-register5"></div> 
